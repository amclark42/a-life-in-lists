  <tagsDecl xml:id="listsTagsDecl">
    <rendition scheme="css" selector="cit">display: flex; flex-direction: column;</rendition>
    <rendition scheme="css" selector="said, series, title[rend='quoted']" scope="before">“</rendition>
    <rendition scheme="css" selector="said, series, title[rend='quoted']" scope="after">”</rendition>
    <rendition scheme="css" selector="title">font-style: italic;</rendition>
    <rendition scheme="css" selector="title[rend='quoted']">font-style: normal;</rendition>
  </tagsDecl>
  <listPrefixDef>
    <prefixDef ident="ash" matchPattern="([\w\.]+)" replacementPattern="timeline.xml#$1">
      <p></p>
    </prefixDef>
    <prefixDef ident="a" matchPattern="([\w\.]+)" replacementPattern="authors_3.0.xml#$1">
      <p></p>
    </prefixDef>
    <prefixDef ident="b" matchPattern="([\w\.]+)" replacementPattern="booksRead_3.0.xml#$1">
      <p></p>
    </prefixDef>
  </listPrefixDef>
</encodingDesc>