    <body>
      <listEvent>
        <head>Personal Timeline</head>
        
        <event xml:id="developer" from="2014"
           where="#ma.greaterboston">
          <label>Developer</label>
        </event>
        
        <event xml:id="freelancer" from="2012" to="2014"
           where="#il.chicago">
          <label>Freelancer</label>
        </event>
        
        <event xml:id="master" from="2010" to="2012" 
           where="#il.urbanachampaign">
          <label>Master</label>
        </event>
        
        <event xml:id="bachelor" from="2006" to="2010" 
           where="#ia.desmoines">
          <label>Bachelor</label>
        </event>
        
        <event xml:id="youngadult" from="2001" to="2006" 
           where="#il.chicago">
          <label>Young Adult</label>
        </event>
        
        <event xml:id="child" to="2001"
           where="#il.chicago">
          <label>Child</label>
        </event>
      </listEvent>
      
      <listPlace>
        <head>Homes</head>
        
        <place xml:id="il">
          <placeName>Illinois</placeName>
          <country>United States of America</country>
          
          <place xml:id="il.chicago">
            <placeName>Chicago</placeName>
          </place>
          <place xml:id="il.urbanachampaign">
            <placeName>Urbana-Champaign</placeName>
            
            <place xml:id="il.champaign">
              <placeName>Champaign</placeName>
            </place>
            <place xml:id="il.urbana">
              <placeName>Urbana</placeName>
            </place>
          </place>
        </place>
        
        <place xml:id="ia">
          <placeName>Iowa</placeName>
          <country>United States of America</country>
          
          <place xml:id="ia.desmoines">
            <placeName>Des Moines</placeName>
          </place>
        </place>
        
        <place xml:id="ma">
          <placeName>Massachusetts</placeName>
          <country>United States of America</country>
          
          <place xml:id="ma.greaterboston">
            <placeName>Greater Boston Area</placeName>
            
            <place xml:id="ma.boston">
              <placeName>Boston</placeName>
            </place>
            <place xml:id="ma.somerville">
              <placeName>Somerville</placeName>
            </place>
          </place>
        </place>
      </listPlace>
